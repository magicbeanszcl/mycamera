<?xml version="1.0" encoding="utf-8"?>
<com.example.mycamera.ControlBarWrapper 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_bar_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.example.mycamera.ControlBar
        android:id="@+id/control_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#00000000">
        <RelativeLayout
            android:id="@+id/control_bar_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.mycamera.ShutterButton
                android:id="@+id/shutter_button"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="center"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_camera"/>
            <com.example.mycamera.ShutterButton
                android:id="@+id/video_snap_button"
                android:layout_gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/shutter_video_button"
                android:layout_alignTop="@id/shutter_button"
                android:layout_marginRight="24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <!-- android:layout_marginTop="8dp" -->
                
            <com.example.mycamera.CameraToggleBar
                android:id="@+id/peek_thumb"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/camera_toggle_bar"
                android:layout_gravity="left|center_vertical"
                android:layout_alignTop="@id/shutter_button"
                android:layout_marginLeft="25dp"
                android:layout_alignParentLeft="true"/>
            <!--android:layout_marginTop="9dp"  -->
                   
        </RelativeLayout>
    </com.example.mycamera.ControlBar>
    
</com.example.mycamera.ControlBarWrapper>
